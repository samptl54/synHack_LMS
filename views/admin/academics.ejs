        <!-- SortableJS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.15.0/Sortable.min.js"></script>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const fileInput = document.getElementById("fileInput");
                const fileNameDisplay = document.getElementById("fileName");
                if (fileInput && fileNameDisplay) {
                    fileInput.addEventListener("change", function () {
                        fileNameDisplay.textContent =
                            this.files.length > 0
                                ? this.files[0].name
                                : "No file selected";
                    });
                }
            });

            // Expand/collapse with smooth transitions
            function toggleExpand(element) {
                const next = element.nextElementSibling;
                if (!next) return;

                const header = element.querySelector("h3, h4, h5");

                if (next.classList.contains("ac-collapsed")) {
                    next.classList.remove("ac-collapsed");
                    const full = next.scrollHeight;
                    next.style.maxHeight = full + "px";
                    next.style.opacity = "1";
                    if (header) header.classList.add("ac-expanded-toggle");
                    setTimeout(() => {
                        next.style.maxHeight = "10000px";
                    }, 400);
                } else {
                    const cur = next.scrollHeight;
                    next.style.maxHeight = cur + "px";
                    next.offsetHeight;
                    next.style.maxHeight = "0px";
                    next.style.opacity = "0";
                    if (header) header.classList.remove("ac-expanded-toggle");
                    next.classList.add("ac-collapsed");
                }
            }

            function openModal(id) {
                const el = document.getElementById(id);
                if (!el) return;
                el.setAttribute("aria-hidden", "false");
                el.style.display = "flex";
                document.documentElement.style.overflow = "hidden";
                document.body.style.overflow = "hidden";
            }

            function closeModal(id) {
                const el = document.getElementById(id);
                if (!el) return;
                el.setAttribute("aria-hidden", "true");
                el.style.display = "none";
                document.documentElement.style.overflow = "";
                document.body.style.overflow = "";
            }

            function modalBackdropClick(evt) {
                if (
                    evt &&
                    evt.target &&
                    evt.target.classList &&
                    evt.target.classList.contains("ac-modal")
                ) {
                    const id = evt.target.id;
                    closeModal(id);
                }
            }

            function openAddYearModal(depId) {
                const form = document.getElementById("acAddYearForm");
                if (!form) return;
                form.action = `/admin/academics/${depId}/addYear`;
                openModal("acAddYearModal");
            }

            function openAddSubjectModal(depId, yearId) {
                const form = document.getElementById("acAddSubjectForm");
                if (!form) return;
                form.action = `/admin/academics/${depId}/years/${yearId}/addSubject`;
                openModal("acAddSubjectModal");
            }

            function openAddResourceModal(depId, yearId, subId) {
                const form = document.getElementById("acAddResourceForm");
                if (!form) return;
                form.action = `/admin/academics/${depId}/years/${yearId}/subjects/${subId}/addResource`;
                openModal("acAddResourceModal");
            }

            // Initialize
            document.addEventListener("DOMContentLoaded", function () {
                const container = document.querySelector(
                    ".ac-dashboard-container"
                );
                if (container) {
                    new Sortable(container, {
                        group: "nested",
                        animation: 200,
                        handle: ".ac-card",
                        fallbackOnBody: true,
                        swapThreshold: 0.65,
                    });
                }

                document.querySelectorAll(".ac-sub-card").forEach((sub) => {
                    if (sub.classList.contains("ac-collapsed")) {
                        sub.style.maxHeight = "0px";
                        sub.style.opacity = "0";
                    }
                });

                // Remove ac-expanded-toggle class from all headers initially
                document
                    .querySelectorAll(
                        ".ac-toggle-btn h3, .ac-toggle-btn h4, .ac-toggle-btn h5"
                    )
                    .forEach((header) => {
                        header.classList.remove("ac-expanded-toggle");
                    });
            });

            // Delete functions with confirmation
            function deleteDepartment(depId, depName) {
                if (
                    confirm(
                        `Are you sure you want to delete the department "${depName}"? This will delete all years, subjects, and resources within it.`
                    )
                ) {
                    fetch(`/admin/academics/${depId}`, {
                        method: "DELETE",
                        headers: {
                            "Content-Type": "application/json",
                        },
                    })
                        .then((response) => response.json())
                        .then((data) => {
                            if (data.success) {
                                location.reload();
                            } else {
                                alert(
                                    "Error deleting department: " +
                                        (data.message || "Unknown error")
                                );
                            }
                        })
                        .catch((error) => {
                            console.error("Error:", error);
                            alert(
                                "Error deleting department. Please try again."
                            );
                        });
                }
            }

            function deleteYear(depId, yearId, yearNum) {
                if (
                    confirm(
                        `Are you sure you want to delete Year ${yearNum}? This will delete all subjects and resources within it.`
                    )
                ) {
                    fetch(`/admin/academics/${depId}/years/${yearId}`, {
                        method: "DELETE",
                        headers: {
                            "Content-Type": "application/json",
                        },
                    })
                        .then((response) => response.json())
                        .then((data) => {
                            if (data.success) {
                                location.reload();
                            } else {
                                alert(
                                    "Error deleting year: " +
                                        (data.message || "Unknown error")
                                );
                            }
                        })
                        .catch((error) => {
                            console.error("Error:", error);
                            alert("Error deleting year. Please try again.");
                        });
                }
            }

            function deleteSubject(depId, yearId, subjectId, subjectName) {
                if (
                    confirm(
                        `Are you sure you want to delete the subject "${subjectName}"? This will delete all resources within it.`
                    )
                ) {
                    fetch(
                        `/admin/academics/${depId}/years/${yearId}/subjects/${subjectId}`,
                        {
                            method: "DELETE",
                            headers: {
                                "Content-Type": "application/json",
                            },
                        }
                    )
                        .then((response) => response.json())
                        .then((data) => {
                            if (data.success) {
                                location.reload();
                            } else {
                                alert(
                                    "Error deleting subject: " +
                                        (data.message || "Unknown error")
                                );
                            }
                        })
                        .catch((error) => {
                            console.error("Error:", error);
                            alert("Error deleting subject. Please try again.");
                        });
                }
            }

            function deleteResource(
                depId,
                yearId,
                subjectId,
                resourceId,
                resourceDesc
            ) {
                if (
                    confirm(
                        `Are you sure you want to delete the resource "${resourceDesc}"?`
                    )
                ) {
                    fetch(
                        `/admin/academics/${depId}/years/${yearId}/subjects/${subjectId}/resources/${resourceId}`,
                        {
                            method: "DELETE",
                            headers: {
                                "Content-Type": "application/json",
                            },
                        }
                    )
                        .then((response) => response.json())
                        .then((data) => {
                            if (data.success) {
                                location.reload();
                            } else {
                                alert(
                                    "Error deleting resource: " +
                                        (data.message || "Unknown error")
                                );
                            }
                        })
                        .catch((error) => {
                            console.error("Error:", error);
                            alert("Error deleting resource. Please try again.");
                        });
                }
            }

            async function uploadToDrive() {
                const file = document.getElementById("fileInput").files[0];
                if (!file) return alert("Select a file first");
                const formData = new FormData();
                formData.append("file", file);
                const res = await fetch("/upload", {
                    method: "POST",
                    body: formData,
                });
                const data = await res.json();
                if (data.success) {
                    document.querySelector('input[name="link"]').value =
                        data.webViewLink;
                    alert("Uploaded! Link added automatically.");
                } else {
                    alert("Upload failed: " + (data.error || "unknown"));
                }
            }
        </script>
    </body>
